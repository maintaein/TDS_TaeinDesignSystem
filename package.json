{
  "name": "@designsystem/monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "토스증권 스타일 디자인 시스템",
  "scripts": {
    "dev": "pnpm --filter @designsystem/demo dev",
    "dev:docs": "pnpm --filter @designsystem/docs storybook",
    "build": "pnpm --filter @designsystem/core build",
    "build:all": "pnpm -r build",
    "test": "pnpm --filter @designsystem/core test",
    "test:coverage": "pnpm --filter @designsystem/core test:coverage",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\"",
    "typecheck": "pnpm -r typecheck"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "^8.46.4",
    "@typescript-eslint/parser": "^8.46.4",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.26",
    "globals": "^16.5.0",
    "prettier": "^3.1.1",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.50.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
